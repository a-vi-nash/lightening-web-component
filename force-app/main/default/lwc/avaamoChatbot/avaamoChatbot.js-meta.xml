<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>46.0</apiVersion>
        <!-- Set isExposed to true -To allow the component to be used in Lightning App Builder and define at least one <target>, which is a type of Lightning page. -->
    <isExposed>true</isExposed>
  <targets>
    <target>lightning__AppPage</target>
    <target>lightning__RecordPage</target>
    <target>lightning__HomePage</target>
  </targets>
  <targetConfigs>
    <targetConfig targets="lightning__HomePage">
        <property name="avaamobotURL" label="Avaamo Agent URL" type="String" default="https://c0.avaamo.com/web_channels/3b51f5d5-b21c-4dfd-9bd9-dd1a00344cfd/channel.html" description="The web link url of the Avaamo Agent." />
        <property name="avaamobotIconURL" label="Avaamo Bot Icon URL" type="String" default="https://nappy.co/public/avatar/default.jpg" description="The bot icon url of the Avaamo Agent that would be displayed on the screen." />
        <property name="botHeight" label="Chatbot height" type="Integer" default="85"></property>
        <property name="botWidth" label="Chatbot width" type="Integer" default="30"></property>     
      </targetConfig>
</targetConfigs>
</LightningComponentBundle>